<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyTasks.MainPage">

    <Grid RowDefinitions="100, Auto, *" ColumnDefinitions=".75*,.25*" Padding="10" ColumnSpacing="15" RowSpacing="15">
        <Image Grid.ColumnSpan="2" Source="logo.png"></Image>
        <Entry Grid.Row="1" Placeholder="Enter a new task:"></Entry>
        <Button Grid.Column="1" Grid.Row="1" Text="Add"></Button>

        <CollectionView Grid.Row="2" Grid.ColumnSpan="2">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Clean my room</x:String>
                    <x:String>Go to the gym</x:String>
                    <x:String>Wash my car</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
        </CollectionView>
        
    </Grid>

</ContentPage>
